void main()
{ clrscr();
  int arr[30][30];
  int i,j,m,n;
 
  cout<<"\nEnter number of rows and columns:";
  cin>>n;
  cout<<"\nEnter your array elements:";
  for(i=0;i<n;i++)
   for(j=0;j<n;j++)
    cin>>arr[i][j];
  
   clrscr();
   cout<<"\nYour array:\n";
   for(i=0;i<n;i++)
   { for(j=0;j<n;j++)
      cout<<arr[i][j]<<" ";
       cout<<"\n";          }


cout<<"\nThe elements below diagonal:";
	      for(i=0;i<n;i++)
	       for(j=0;j<n;j++)
		if(i>j)
		{ cout<<arr[i][j]<<" "; }
