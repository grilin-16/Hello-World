#include<iostream.h>
#include<conio.h>
#include<stdlib.h>
void colsum(int a[100][100],int r,int c)
{  int i,j,sum;
   for(j=0;j<c;j++)
   {  sum=0;
      for(i=0;i<r;i++)
       sum=sum+a[i][j];
      cout<<"\nSum of column "<<j+1<<"="<<sum; }    }

void main(){
int i,j,r,c,arr[100][100];
clrscr();
    cout<<"\nEnter row size:";
    cin>>r;
    cout<<"Enter column size:";
    cin>>c;
    cout<<"Enter your elements:";
    for(i=0;i<r;i++)
     for(j=0;j<c;j++)
      cin>>arr[i][j];
    cout<<"\nArray=\n";
	   for(i=0;i<r;i++)
	    { for(j=0;j<c;j++)
	       cout<<arr[i][j]<<" ";
		cout<<"\n"; }
	  colsum(arr,r,c);
	  cout<<"\n\nThank you";
getch();}

